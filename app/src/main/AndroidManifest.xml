<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lighttigerxiv.simple.mp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" /> <!-- <uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:grantUriPermissions="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleMP"
        tools:targetApi="31">
        <activity
            android:name=".activities.ActivitySettings"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityQueue"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityAddToPlaylist"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityMain"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".SimpleMPService" />
        <service android:name=".services.ActionsService" />

        <receiver
            android:name=".services.HeadphoneJackReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.HEADSET_PLUG" />
            </intent-filter>
        </receiver>

        <receiver android:name=".services.ReceiverOpenApp" />
        <receiver android:name=".services.ReceiverStop" />
        <receiver android:name=".services.ReceiverPreviousSong" />
        <receiver android:name=".services.ReceiverPlayPause" />
        <receiver android:name=".services.ReceiverSkipSong" />
    </application>

</manifest>