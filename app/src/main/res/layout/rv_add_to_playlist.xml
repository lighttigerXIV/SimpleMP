<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain_RVAddToPlaylist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlistArt_RVAddToPlaylist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Custom_RoundImage" />

    <TextView
        android:id="@+id/playlistName_RVAddToPlaylist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/playlistArt_RVAddToPlaylist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playlistArt_RVAddToPlaylist"
        app:layout_constraintTop_toTopOf="@+id/playlistArt_RVAddToPlaylist" />
</androidx.constraintlayout.widget.ConstraintLayout>