<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain_RVArtists"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:layout_constraintDimensionRatio="1:1">

    <TextView
        android:id="@+id/artistName_RVArtists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artistAlbum_RVArtists" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/artistAlbum_RVArtists"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/icon_music_record"
        android:backgroundTint="@color/icon"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Custom_RoundImage" />
</androidx.constraintlayout.widget.ConstraintLayout>