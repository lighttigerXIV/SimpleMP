<resources>

    <!--Main-->
    <style name="Theme.SimpleMP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mainPurple</item>
        <item name="colorPrimaryVariant">@color/mainPurple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/mainPurple</item>
        <item name="colorSecondaryVariant">@color/mainPurple</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:textColor">@color/text</item>

        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Custom_EditText">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="Custom_BottomNav">
        <item name="android:background">@color/mainPurple</item>
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="Custom_TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomLayoutTextAppearance</item>
    </style>

    <style name="CustomLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="Custom_RoundImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Theme.SimpleMP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SimpleMP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SimpleMP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>